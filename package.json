{
  "name": "content-security-toolkit",
  "version": "1.0.1",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "examples:install": "cd examples && npm install",
    "examples:build": "npm run build && npm run examples:install",
    "examples:start": "cd examples && npm run start"
  },
  "keywords": [
    "content-security",
    "content-protection",
    "web-security",
    "anti-screenshot",
    "devtools-detection",
    "watermark",
    "copy-protection",
    "browser-security",
    "typescript",
    "javascript",
    "frontend-security"
  ],
  "author": "Isonimus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Isonimus/content-security-toolkit.git"
  },
  "description": "Lightweight TypeScript toolkit to protect web content: blocks copying/printing, detects devtools/screenshots, adds watermarks, and provides extensible strategies and detectors.",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "eslintConfig": {
    "files": [
      "eslint.config.js"
    ]
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.7.0"
  }
}
